<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="cleargo_asiapay" translate="label" type="text" sortOrder="35" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>AsiaPay's PayDollar - Client Post Through Browser</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="order_status" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
                </field>
                <field id="merchant_id" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Merchan ID</label>
                </field>
                <field id="gateway_url" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Gateway URL</label>
                </field>
                <field id="payment_action" translate="label" type="select" sortOrder="41" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment Type</label>
                    <source_model>Cleargo\Asiapay\Model\Config\Source\Payment\Type</source_model>
                </field>
                <field id="payment_method_type" translate="label" type="select" sortOrder="42" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment Method</label>
                    <source_model>Cleargo\Asiapay\Model\Config\Source\Payment\Method\Allspecific</source_model>
                </field>
                <field id="payment_method" translate="label" type="multiselect" sortOrder="45" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Allowed Payment Methods</label>
                    <source_model>Cleargo\Asiapay\Model\Config\Source\Payment\Method</source_model>
                    <depends>
                        <field id="payment_method_type">SPECIFIC</field>
                    </depends>
                </field>
                <field id="allowspecific" translate="label" type="allowspecific" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="51" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment from Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field id="min_order_total" translate="label" type="text" sortOrder="98" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Minimum Order Total</label>
                </field>
                <field id="max_order_total" translate="label" type="text" sortOrder="99" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Maximum Order Total</label>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sort Order</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
                <field id="order_no_prefix" translate="label comment" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Prefix for Order Reference No.</label>
                    <comment><![CDATA[Warning: Do not use a dash "-" because the system uses it as a separator between the prefix and the order reference no.]]></comment>
                </field>
                <field id="member_pay" translate="label" type="select" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>MemberPay Feature</label>
                    <source_model>Cleargo\Asiapay\Model\Config\Source\Memberpay</source_model>
                </field>
                <field id="gateway_lang" translate="label" type="select" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Gateway Language</label>
                    <source_model>Cleargo\Asiapay\Model\Config\Source\Gateway\Language</source_model>
                </field>
                <field id="secure_hash_secret" translate="label comment" type="text" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Secure Hash Secret</label>
                    <comment><![CDATA[To enhance communication security from merchant site to PayDollar and vice versa. Please leave blank if not enabled on your PayDollar account.]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>
