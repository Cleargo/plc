<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Cleargo_Core::extension">
                    <resource id="Cleargo_DealerNetwork::dealer_network">
                        <resource id="Cleargo_DealerNetwork::country" title="Countries" sortOrder="10">
                            <resource id="Cleargo_DealerNetwork::country_save" title="Save Country" sortOrder="10" />
                            <resource id="Cleargo_DealerNetwork::country_delete" title="Delete Country" sortOrder="20" />
                        </resource>
                        <resource id="Cleargo_DealerNetwork::region" title="Regions" sortOrder="20">
                            <resource id="Cleargo_DealerNetwork::Region_save" title="Save Region" sortOrder="10" />
                            <resource id="Cleargo_DealerNetwork::Region_delete" title="Delete Region" sortOrder="20" />
                        </resource>
                        <resource id="Cleargo_DealerNetwork::dealer" title="Dealers" sortOrder="30">
                            <resource id="Cleargo_DealerNetwork::dealer_save" title="Save Dealer" sortOrder="10" />
                            <resource id="Cleargo_DealerNetwork::dealer_delete" title="Delete Dealer" sortOrder="20" />
                        </resource>
                        <resource id="Cleargo_DealerNetwork::brand" title="Brands" sortOrder="40">
                            <resource id="Cleargo_DealerNetwork::brand_save" title="Save Dealer" sortOrder="10" />
                            <resource id="Cleargo_DealerNetwork::brand_delete" title="Delete Dealer" sortOrder="20" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
