
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">
    <preference for="Cleargo\Warranty\Api\Data\WarrantySearchResultsInterface" type="Magento\Framework\Api\SearchResults" />
    <preference for="Cleargo\Warranty\Api\Data\WarrantyInterface" type="Cleargo\Warranty\Model\Warranty" />
    <preference for="Cleargo\Warranty\Api\WarrantyRepositoryInterface" type="Cleargo\Warranty\Model\WarrantyRepository" />



    <virtualType name="WarrantyGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Cleargo\Warranty\Model\Resource\Warranty\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">WarrantyGridFilterPool</argument> <!-- Define new object for filters -->
        </arguments>
    </virtualType>

    <!-- Create our type WarrantyGridFilterPool -->
    <virtualType name="WarrantyGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Type for jobs_department_listing_data_source -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="warranty_warranty_listing_data_source" xsi:type="string">Cleargo\Warranty\Model\ResourceModel\Warranty\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

    <!-- Simulate our class Cleargo\Warranty\Model\ResourceModel\Warranty\Grid\Collection -->
    <type name="Cleargo\Warranty\Model\ResourceModel\Warranty\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">warranty_info</argument>
            <argument name="eventPrefix" xsi:type="string">warranty_warranty_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">warranty_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Cleargo\Warranty\Model\ResourceModel\Warranty</argument>
        </arguments>
    </type>
</config>
