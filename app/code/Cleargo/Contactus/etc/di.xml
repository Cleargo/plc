
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">
    <preference for="Magento\Contact\Controller\Index\Post" type="Cleargo\Contactus\Controller\Index\Post" />
    <preference for="Magento\Contact\Block\ContactForm" type="Cleargo\Contactus\Block\ContactForm" />
    <preference for="Magento\Captcha\Observer\CheckContactUsFormObserver" type="Cleargo\Contactus\Observer\CheckContactUsFormObserver" />
    <virtualType name="ContactusGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Cleargo\Contactus\Model\Resource\Grid\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">ContactusGridFilterPool</argument> <!-- Define new object for filters -->
        </arguments>
    </virtualType>

    <!-- Create our type ContactusGridFilterPool -->
    <virtualType name="ContactusGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Type for jobs_department_listing_data_source -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="contactus_grid_listing_data_source" xsi:type="string">Cleargo\Contactus\Model\ResourceModel\Grid\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

    <!-- Simulate our class Cleargo\Contactus\Model\ResourceModel\Grid\Grid\Collection -->
    <type name="Cleargo\Contactus\Model\ResourceModel\Grid\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">contactus_map_location</argument>
            <argument name="eventPrefix" xsi:type="string">contactus_grid_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">grid_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Cleargo\Contactus\Model\ResourceModel\Grid</argument>
        </arguments>
    </type>
</config>
