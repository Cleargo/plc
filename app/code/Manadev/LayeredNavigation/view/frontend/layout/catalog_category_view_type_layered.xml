<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Manadev_LayeredNavigation::css/styles.css"/>
    </head>
    <body>
        <referenceContainer name="sidebar.main">
            <block class="Manadev\LayeredNavigation\Blocks\Navigation" name="left.mana.layered_nav" before="-" template="Manadev_LayeredNavigation::navigation.phtml">
                <arguments>
                    <argument name="position" xsi:type="string">left</argument>
                </arguments>
                <block class="Manadev\LayeredNavigation\Blocks\FilterRenderer" name="left.mana.layered_nav.filter_renderer" as="filter_renderer"/>
                <block class="Manadev\LayeredNavigation\Blocks\AppliedItemRenderer" name="left.mana.layered_nav.applied_item_renderer" as="applied_item_renderer"/>
            </block>
        </referenceContainer>
        <referenceContainer name="catalog.leftnav" remove="true"/>
    </body>
</page>
