<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\View\Description" name="product.info.video" template="product/view/video.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Video</argument>
                </arguments>
            </block>
            <referenceBlock name="product.info.description">
                <block class="Cleargo\ProductPdf\Block\Pdf" name="product.info.pdf" template="Magento_Catalog::product/view/pdf.phtml" />
            </referenceBlock>
        </referenceBlock>
        
        <!--move destination="product.info" element="product.info.price" after="product.info.form.content" />
        <move destination="product.info" element="product.info.tier" after="product.info.price" /-->
    </body>
</page>
